{
  "workbench.editor.enablePreview": false,
  // custom config for python
  "[python]": {
      // format the code on save
      "editor.formatOnSave": true,
      // actions run on save
      "editor.codeActionsOnSave": {
        "source.organizeImports": "explicit"
      },
      // remove trailling whitespace on save
      "files.trimTrailingWhitespace": true,
      "editor.defaultFormatter": "ms-python.autopep8",
  },
  "python.autoComplete.extraPaths": [
    "/lab/user/bricks/gws_core/src",
  ],
  "autoDocstring.docstringFormat": "sphinx",
  "python.analysis.extraPaths": [
    "/lab/user/bricks/gws_core/src"
  ],
  
  
  // python formatting (indentation)
  "autopep8.path": ["/usr/local/bin/autopep8"],
  "autopep8.args": ["--max-line-length", "120", "--experimental"],


  // activate pylint
  "pylint.path": ["/usr/local/bin/pylint"],
  "pylint.args":["--rcfile=${workspaceFolder}/.pylintrc"],


  // activate mypy to have type hint checking
  "mypy-type-checker.path": ["/usr/local/bin/mypy"],
  "mypy-type-checker.args": [
      "--config-file=${workspaceFolder}/.mypy.ini"]

}
