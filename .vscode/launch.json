{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        // configuration to start the gws
        {
            "args": ["server", "run", "--settings-path=/lab/.sys/app/settings.json"],
            "name": "Starts GWS server",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/gws_cli/gws_cli/main_cli.py",
            "console": "integratedTerminal"
        },
        // configuration to start the gws
        {
            "args": ["--runserver", "--log_level=DEBUG"],
            "name": "Starts GWS server - DEBUG log",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/manage.py",
            "console": "integratedTerminal"
        },
        // config to run test on GWS
        {
            "args": ["--test", "all"],
            "name": "Test all",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/manage.py",
            "console": "integratedTerminal"
        },
        // config to run test on GWS
        {
            "args": ["--test", "${input:testFileName}"],
            "name": "Test single",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/manage.py",
            "console": "integratedTerminal",
        },
        // reset the dev env
        {
          "args": ["reset-dev-env"],
          "name": "Reset dev env",
          "type": "debugpy",
          "request": "launch",
          "program": "/lab/user/bricks/gws_core/cli/main_cli.py",
          "console": "integratedTerminal",
      },
      {
        "name": "Client s3",
        "type": "debugpy",
        "request": "launch",
        "program": "/lab/user/bricks/gws_core/test_s3/test_s3_client.py",
        "console": "integratedTerminal",
        "justMyCode": false
    },
    ],

    "inputs": [
        {
            "id": "testFileName",
            "type": "promptString",
            "description": "Name of the test files to run (separated with space)",
        },
        {
            "id": "resetKey",
            "type": "promptString",
            "description": "/!\\ This delete all the data of the dev env (prod env will not be affected). Please type 'reset-dev-env' to confirm./!\\",
        }
    ]
}