{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        // configuration to start the gws
        {
            "args": [
                "server",
                "run"
            ],
            "name": "Starts GWS server",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/gws_cli/gws_cli/main_cli.py",
            "console": "integratedTerminal"
        },
        // configuration to start the gws
        {
            "args": [
                "server",
                "run",
                "--log-level=DEBUG"
            ],
            "name": "Starts GWS server - DEBUG log",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/gws_cli/gws_cli/main_cli.py",
            "console": "integratedTerminal"
        },
        // config to run test on GWS
        {
            "args": [
                "server",
                "test",
                "all"
            ],
            "name": "Test all",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/gws_cli/gws_cli/main_cli.py",
            "console": "integratedTerminal"
        },
        // config to run test on GWS
        {
            "args": [
                "server",
                "test",
                "${input:testFileName}"
            ],
            "name": "Test single",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/gws_cli/gws_cli/main_cli.py",
            "console": "integratedTerminal",
        },
        {
            "args": [
                "streamlit",
                "run-dev",
                "${input:configFilePath}"
            ],
            "name": "Streamlit dev",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/gws_cli/gws_cli/main_cli.py",
            "console": "integratedTerminal",
        },
        {
            "args": [
                "reflex",
                "run-dev",
                "${input:configFilePath}"
            ],
            "name": "Reflex dev",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/gws_cli/gws_cli/main_cli.py",
            "console": "integratedTerminal",
        }
    ],
    "inputs": [
        {
            "id": "testFileName",
            "type": "promptString",
            "description": "Name of the test file to run",
        },
        {
            "id": "resetKey",
            "type": "promptString",
            "description": "/!\\ This delete all the data of the dev env (prod env will not be affected). Please type 'reset-dev-env' to confirm./!\\",
        },
        {
            "id": "configFilePath",
            "type": "promptString",
            "description": "Path to the streamlit dev config file",
        }
    ]
}