{
    "name"          : "gws",
    "title"         : "Core Gencovery Web Services (GWS)",
    "description"   : "This application provides core functionalities for GWS-based modules",
    "authors"       : "Gencovery",
    "version"       : "0.1",

    "app_dir"       : "./",
    "app_host"      : "0.0.0.0",
    "app_port"      : 3000,

    "db_dir"        : "./data",
    "db_name"       : "db.sqlite3",

    "is_test"           : false,
    "gws:testdata_dir" : "./tests/testdata",

    "dependencies"  : {},
    
    "app":{
        "favicon": {"src":"/static/gws/favicon.png", "type":"image/png"},
